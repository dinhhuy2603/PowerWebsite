<script type="text/javascript">
    var gas_obj = @Html.Raw(Json.Encode(ViewBag.gas));
    var water_obj = @Html.Raw(Json.Encode(ViewBag.water));

    $(document).ready(function () {
        //Perform Ajax request.
        Highcharts.setOptions({
            global: {
                useUTC: false
            }
        });
    });
    function getGasData() {
        var gasData = gas_obj;
        $.ajax({
            url: '/Home/GetGasData/',
            type: 'get',
            async: false,
            success: function (data) {
                gasData = data;
            },
            error: function (xhr, ajaxOptions, thrownError) {
                var errorMsg = 'Ajax request failed: ' + xhr.responseText;
                $('#content').html(errorMsg);
            }
        });
        return gasData;
    }

    function initData() {
        var data = [];
        var time = Date.now();
        for (var i = -19; i <= 0; i += 1) {
            data.push({ x: time + i * 1000, y: 0 });
        }
        return data;
    }

    let chart = new Highcharts.chart('chartGasNow', {
        chart: {
            type: 'area',
            animation: { duration: 500 },
            //height: 500,
            events: {
                load: function () {
                    var series = this.series;
                    var len = series.length;
                    setInterval(function (chartData) {
                        var chartData = getGasData();
                        //var time = parseInt(chartData.Thoigian.replace("/Date(", "").replace(")/", ""));
                        var t = Date.now();
                        for (var j = 0; j < len; j++) {
                            switch (j) {
                                case 0:
                                    {
                                        series[j].addPoint([t, parseFloat(chartData.luu_luong_hien_tai)], false, true);
                                        break;
                                    }
                            }
                        }
                        chart.redraw();
                    }, 1000);
                }
            }
        },
        title: { text: 'Lưu lượng GAS' },
        xAxis: { type: 'datetime', tickPixelInterval: 150 },
        yAxis: { title: { text: 'Value' }, plotLines: [{ value: 0, width: 1, color: '#808080' }] },
        legend: { enabled: true },
        credits: { enabled: false },
        exporting: { enabled: false },
        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
                chartOptions: {
                    legend: {
                        align: 'center',
                        verticalAlign: 'bottom',
                        layout: 'horizontal'
                    },
                    yAxis: {
                        labels: {
                            align: 'left',
                            x: 0,
                            y: -5
                        },
                        title: {
                            text: null
                        }
                    },
                    subtitle: {
                        text: null
                    },
                    credits: {
                        enabled: false
                    }
                }
            }]
        },
        series:
        [
          { name: 'Lưu lượng hiện tại', data: initData(), color: '#4e73df' }
        ]
    });

    // Chart Gas Total
    let chart_total = new Highcharts.chart('chartGasTotal', {
        chart: {
            type: 'spline',
            animation: { duration: 500 },
            //height: 500,
            events: {
                load: function () {
                    var series = this.series;
                    var len = series.length;
                    setInterval(function (chartData) {
                        var chartData = getGasData();
                        var t = Date.now();
                        for (var j = 0; j < len; j++) {
                            switch (j) {
                                case 0:
                                    {
                                        series[j].addPoint([t, parseFloat(chartData.luu_luong_tong)], false, true);
                                        break;
                                    }
                            }
                        }
                        chart_total.redraw();
                    }, 1000);
                }
            }
        },
        title: { text: 'Lưu lượng GAS2' },
        xAxis: { type: 'datetime', tickPixelInterval: 150 },
        yAxis: { title: { text: 'Value' }, plotLines: [{ value: 0, width: 1, color: '#808080' }] },
        legend: { enabled: true },
        credits: { enabled: false },
        exporting: { enabled: false },
        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
                chartOptions: {
                    legend: {
                        align: 'center',
                        verticalAlign: 'bottom',
                        layout: 'horizontal'
                    },
                    yAxis: {
                        labels: {
                            align: 'left',
                            x: 0,
                            y: -5
                        },
                        title: {
                            text: null
                        }
                    },
                    subtitle: {
                        text: null
                    },
                    credits: {
                        enabled: false
                    }
                }
            }]
        },
        series:
        [
          { name: 'Lưu lượng tổng', data: initData(), color: '#4e73df' }
        ]
    });
</script>

