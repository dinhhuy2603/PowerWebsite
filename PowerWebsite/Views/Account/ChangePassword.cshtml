@using PowerWebsite.Models
@model UserAccChangePass
@{
    Layout = null;
}
@{
    var user = ViewBag.user;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Website - Đăng ký</title>
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                    </div>
                                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "user", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @*@Html.ValidationSummary(true)*@
                                    if (@ViewBag.Message != null)
                                    {
                                        <div style="border: 1px solid red; color: orangered">
                                            @ViewBag.Message
                                        </div>
                                    }
                                    if (@ViewBag.MessageSuccess != null)
                                    {
                                        <div style="color: forestgreen">
                                            @ViewBag.MessageSuccess
                                        </div>
                                        }
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Mật khẩu cũ", @class = "form-control form-control-user", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Mật khẩu mới", @class = "form-control form-control-user", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Lặp lại mật khẩu", @class = "form-control form-control-user" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <input type="submit" value="Thay đổi" class="btn btn-primary btn-user btn-block" />
                                    }
                                    <hr>
                                    @*<div class="text-center">
                                            <a class="small" href="forgot-password.html">Quên mật khẩu?</a>
                                        </div>*@
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Login", "Account")">Quay lại màn hình đăng nhập</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <!-- Core plugin JavaScript-->
    <!-- Custom scripts for all pages-->
</body>
</html>

