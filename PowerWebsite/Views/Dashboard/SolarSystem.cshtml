<script type="text/javascript">
    function GetChartSolar1Data() {
        var chartSolar1 = {};
        $.ajax({
            url: '/Snack/GetChartSolar1Data/',
            type: 'get',
            async: false,
            success: function (data) {
                chartSolar1 = data;
            },
            error: function (xhr, ajaxOptions, thrownError) {
                var errorMsg = 'Ajax request failed: ' + xhr.responseText;
                $('#content').html(errorMsg);
            }
        });
        return chartSolar1;
    }

    function GetChartSolar2Data() {
        var chartSolar2 = {};
        $.ajax({
            url: '/Snack/GetChartSolar2Data/',
            type: 'get',
            async: false,
            success: function (data) {
                chartSolar2 = data;
            },
            error: function (xhr, ajaxOptions, thrownError) {
                var errorMsg = 'Ajax request failed: ' + xhr.responseText;
                $('#content').html(errorMsg);
            }
        });
        return chartSolar2;
    }

    var solar1 = GetChartSolar1Data();
    var solar2 = GetChartSolar2Data();

    $(document).ready(function () {
        Highcharts.setOptions({
            global: {
                useUTC: false
            }
        });

        //Create the Hub
        var chartHub = $.connection.chartHub;
        //Call InitChartData
        $.connection.hub.start().done(function () {
            chartHub.server.initChartDataSolar();
        });

        //Call to Update LineChart from Server
        chartHub.client.UpdateChartSolar = function (solar1_data, solar2_data) {
            UpdateSolar1Chart(solar1_data);
            UpdateSolar2Chart(solar2_data);
        };

        chartHub.client.updatePopupSolar = function (data_hienthi) {
            $('#Vca').html(data_hienthi.Vca)
            $('#Vbc').html(data_hienthi.Vbc)
            $('#Vab').html(data_hienthi.Vab)
            $('#Vun').html(data_hienthi.Vun)
            $('#VII').html(data_hienthi.VII)
            $('#Cac').html(data_hienthi.Cac)
            $('#Cab').html(data_hienthi.Cab)
            $('#Caa').html(data_hienthi.Caa)
            $('#Civg').html(data_hienthi.Civg)
            $('#Pc').html(data_hienthi.Pc)
            $('#Pb').html(data_hienthi.Pb)
            $('#Pa').html(data_hienthi.Pa)
            $('#Ptotal').html(data_hienthi.Ptotal)
            $('#Pkvar').html(data_hienthi.Pkvar)
            $('#Pkva').html(data_hienthi.Pkva)
            $('#Van').html(data_hienthi.Van)
            $('#Vbn').html(data_hienthi.Vbn)
            $('#Vcn').html(data_hienthi.Vcn)
            $('#F').html(data_hienthi.F)
            $('#PF').html(data_hienthi.PF)
            $('#Kwh').html(data_hienthi.Kwh)
            $('#Vin').html(data_hienthi.Vin)
        };

        $(".show-kenh").on("click", function () {
            $('#centermodal').modal('show');
            kenh = $(this).attr('data-value');
            chartHub.server.sendKenhSolar(kenh);
        });

    });

    // Update Chart Solar1
    function UpdateSolar1Chart(data) {
        if (chartSolar1A) {
            point = chartSolar1A.series[0].points[0];
            newVal = data.Ptotal ? parseFloat(data.Ptotal) : 0;
            if (newVal < 0 || newVal > 200) {
                newVal = data.Ptotal ? parseFloat(data.Ptotal) : 0;
            }
            point.update(newVal);
        }
        if (chartSolar1B) {
            point = chartSolar1B.series[0].points[0];
            newVal = data.Kwh ? parseFloat(data.Kwh) : 0;

            if (newVal < 0 || newVal > 200) {
                newVal = data.Kwh ? parseFloat(data.Kwh) : 0;
            }
            point.update(newVal);
        }
        // Update button xanh/đỏ
        if (data.status == 0) {
            $('#solar1_status').css('background', 'green');
        }
        else {
            $('#solar1_status').css('background', 'red');
        }
    }
    // Update Chart Solar2
    function UpdateSolar2Chart(data) {
        if (chartSolar2A) {
            point = chartSolar2A.series[0].points[0];
            newVal = data.Ptotal ? parseFloat(data.Ptotal) : 0;
            if (newVal < 0 || newVal > 200) {
                newVal = data.Ptotal ? parseFloat(data.Ptotal) : 0;
            }
            point.update(newVal);
        }
        if (chartSolar2B) {
            point = chartSolar2B.series[0].points[0];
            newVal = data.Kwh ? parseFloat(data.Kwh) : 0;

            if (newVal < 0 || newVal > 200) {
                newVal = data.Kwh ? parseFloat(data.Kwh) : 0;
            }
            point.update(newVal);
        }
        // Update button xanh/đỏ
        if (data.status == 0) {
            $('#solar2_status').css('background', 'green');
        }
        else {
            $('#solar2_status').css('background', 'red');
        }
    }
    
    var gaugeOptions = {
        chart: {
            type: 'solidgauge',
            backgroundColor: '#1c2a47',
            colors: ['#ffff']
        },
        title: null,
        pane: {
            center: ['50%', '85%'],
            size: '140%',
            startAngle: -90,
            endAngle: 90,
            background: {
                backgroundColor: (Highcharts.theme && Highcharts.theme.background2) || '#EEE',
                innerRadius: '60%',
                outerRadius: '100%',
                shape: 'arc'
            }
        },
        tooltip: {
            enabled: false
        },
        exporting: { enabled: false },
        // the value axis
        yAxis: {
            stops: [
                [0.1, '#55bf3b'], // green
                [0.5, '#dddf0d'], // yellow
                [0.9, '#df5353'] // red
            ],
            lineWidth: 0,
            tickWidth: 0,
            minorTickInterval: null,
            tickAmount: 2,
            title: {
                y: -75,
                fontWeight: 'bold',
                fontSize: '25px'
            },
            labels: {
                y: 16
            }
        },
        plotOptions: {
            solidgauge: {
                dataLabels: {
                    y: 5,
                    borderWidth: 0,
                    useHTML: true,
                    color: '#fff'
                }
            }
        }
    };

    var chartSolar1A = Highcharts.chart('chartSolar1A', Highcharts.merge(gaugeOptions, {
        yAxis: {
            min: 0,
            max: 200,
            title: {
                text: 'kw'
            }
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Speed',
            data: [solar1.Ptotal],
            dataLabels: {
                format: '<div style="text-align:center"><span style="font-size:25px;color:' +
                    '#fff' + '">{y}</span><br/>' +
                       '<span style="font-size:12px;color:silver"></span></div>'
            },
            tooltip: {
                valueSuffix: ' km/h'
            }
        }]
    }));
    var chartSolar1B = Highcharts.chart('chartSolar1B', Highcharts.merge(gaugeOptions, {
        yAxis: {
            min: 0,
            max: 3200,
            title: {
                text: 'kwh in day'
            }
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Speed',
            data: [solar1.Kwh],
            dataLabels: {
                format: '<div style="text-align:center"><span style="font-size:25px;color:' +
                    '#fff' + '">{y}</span><br/>' +
                       '<span style="font-size:12px;color:silver"></span></div>'
            },
            tooltip: {
                valueSuffix: ' km/h'
            }
        }]
    }));

    var chartSolar2A = Highcharts.chart('chartSolar2A', Highcharts.merge(gaugeOptions, {
        yAxis: {
            min: 0,
            max: 200,
            title: {
                text: 'kw'
            }
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Speed',
            data: [solar2.Ptotal],
            dataLabels: {
                format: '<div style="text-align:center"><span style="font-size:25px;color:' +
                    '#fff' + '">{y}</span><br/>' +
                       '<span style="font-size:12px;color:silver"></span></div>'
            },
            tooltip: {
                valueSuffix: ' km/h'
            }
        }]
    }));
    var chartSolar2B = Highcharts.chart('chartSolar2B', Highcharts.merge(gaugeOptions, {
        yAxis: {
            min: 0,
            max: 3200,
            title: {
                text: 'kwh in day'
            }
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Speed',
            data: [solar2.Kwh],
            dataLabels: {
                format: '<div style="text-align:center"><span style="font-size:25px;color:' +
                    '#fff' + '">{y}</span><br/>' +
                       '<span style="font-size:12px;color:silver"></span></div>'
            },
            tooltip: {
                valueSuffix: ' km/h'
            }
        }]
    }));
</script>
