    function initData() {
        var data = [];
        var time = Date.now();
        for (var i = -19; i <= 0; i += 1) {
            data.push({ x: time + i * 1000, y: 0 });
        }
        return data;
    }

    let chart = new Highcharts.chart('chartGasNow', {
        chart: {
            type: 'area',
            animation: { duration: 500 },
        },
        title: { text: 'Lưu lượng GAS Hiện Tại (m3/h)' },
        xAxis: { type: 'datetime', tickPixelInterval: 150 },
        yAxis: { title: { text: 'Value' }, plotLines: [{ value: 0, width: 1, color: '#808080' }] },
        legend: { enabled: true },
        credits: { enabled: false },
        exporting: { enabled: true },
        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
                chartOptions: {
                    legend: {
                        align: 'center',
                        verticalAlign: 'bottom',
                        layout: 'horizontal'
                    },
                    yAxis: {
                        labels: {
                            align: 'left',
                            x: 0,
                            y: -5
                        },
                        title: {
                            text: null
                        }
                    },
                    subtitle: {
                        text: null
                    },
                    credits: {
                        enabled: false
                    }
                }
            }]
        },
        series:
        [
          { name: 'm3/h', data: initData(), color: '#4e73df' }
        ],
    });


    // Chart Gas Total
    let chart_total = new Highcharts.chart('chartGasTotal', {
        chart: {
            type: 'area',
            animation: { duration: 500 },
            //zoomType: 'x',
